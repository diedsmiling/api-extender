{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": [
      true,
      120
    ],
    "object-shorthand-properties-first": false,
    "no-shadowed-variable": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}